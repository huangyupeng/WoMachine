<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_title_height"
        android:padding="@dimen/dimen_15"
        android:background="@color/title_blue">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/home_title_image_a"
            android:layout_height="@dimen/home_title_image_a"
            android:src="@drawable/selector_back_arrow"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_title"
            android:textColor="@color/main_white"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/txt_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/main_white"
            android:textSize="@dimen/font_title_right"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_15"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="@dimen/home_title_image_a"
            android:layout_height="@dimen/home_title_image_a"
            android:src="@drawable/selector_title_add"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_15"

            />


        <ImageView
            android:id="@+id/btn_filter"
            android:layout_width="@dimen/home_title_image_a"
            android:layout_height="@dimen/home_title_image_a"
            android:src="@drawable/selector_title_filter"
            android:layout_toLeftOf="@id/btn_add"
            />





    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>





</LinearLayout>